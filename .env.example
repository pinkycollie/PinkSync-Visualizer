# PinkSync Music Visualizer - Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
# For production: https://api.pinksync.com

# Feature Flags
NEXT_PUBLIC_ENABLE_HAPTICS=true
NEXT_PUBLIC_ENABLE_3D_VISUALIZER=true
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true

# External Services (Future integrations)
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# YOUTUBE_API_KEY=your_youtube_api_key

# Storage (for audio file uploads)
# BLOB_READ_WRITE_TOKEN=your_vercel_blob_token
# AWS_S3_BUCKET=your_s3_bucket
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
